<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:background="@color/listItemBackground"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/stop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/grey_800"
        android:drawableLeft="@drawable/ic_bus_double_decker"
        android:drawableStart="@drawable/ic_bus_double_decker"
        android:drawablePadding="4dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/stop_name"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/walk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:drawableLeft="@drawable/ic_walk_blue"
        android:drawableStart="@drawable/ic_walk_blue"
        android:textSize="16sp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:drawablePadding="2dp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/stop_id"
        app:layout_constraintBaseline_toBaselineOf="@id/stop_id"/>

    <TextView
        android:id="@+id/routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-condensed"
        android:textSize="14sp"
        android:textColor="@color/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/stop_id"
        app:layout_constraintLeft_toLeftOf="parent"/>

</android.support.constraint.ConstraintLayout>
