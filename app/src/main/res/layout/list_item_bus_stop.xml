<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/listItemBackground"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="@dimen/list_item_padding">

    <TextView
        android:id="@+id/stop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/google_sans_medium"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stop_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_bus_double_decker"
        android:drawablePadding="4dp"
        android:drawableStart="@drawable/ic_bus_double_decker"
        android:fontFamily="@font/google_sans_regular"
        android:textColor="@color/grey_800"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stop_name" />

    <TextView
        android:id="@+id/walk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/ic_walk_blue"
        android:drawablePadding="2dp"
        android:drawableStart="@drawable/ic_walk_blue"
        android:fontFamily="sans-serif-condensed"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:visibility="gone"
        app:layout_constraintBaseline_toBaselineOf="@id/stop_id"
        app:layout_constraintLeft_toRightOf="@id/stop_id" />

    <android.support.design.chip.ChipGroup
        android:id="@+id/routes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stop_id" />

